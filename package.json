{
  "name": "battle-tetris",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "shared",
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently -n client,server -c blue,green \"npm run dev -w client\" \"npm run dev -w server\"",
    "build": "npm run build -w shared && npm run build -w client && npm run build -w server",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "test": "npm run test -w shared && npm run test -w client && npm run test -w server",
    "test:shared": "npm run test -w shared",
    "test:client": "npm run test -w client",
    "test:server": "npm run test -w server",
    "pretest": "rm -rf allure-results/shared allure-results/client allure-results/server",
    "pretest:e2e": "rm -rf allure-results/e2e",
    "clean:allure": "rm -rf allure-results allure-report",
    "test:e2e": "npx playwright test",
    "test:e2e:prod": "npx playwright test --config playwright.production.config.ts e2e/production-smoke.spec.ts"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.0",
    "@playwright/test": "^1.58.2",
    "@vitest/coverage-v8": "^4.0.18",
    "allure-playwright": "^3.4.5",
    "allure-vitest": "^3.4.5",
    "concurrently": "^9.1.0",
    "eslint": "^10.0.0",
    "prettier": "^3.5.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "8.55.1-alpha.4"
  }
}
