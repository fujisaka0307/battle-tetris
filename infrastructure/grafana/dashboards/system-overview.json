  ],
  "uid": "battle-tetris-system",
  "title": "Battle Tetris - System Overview",
  "description": "System overview dashboard for the Battle Tetris game server. Displays WebSocket connections, room/session activity, HTTP metrics, and error logs.",
  "tags": ["battle-tetris", "system", "overview"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "editable": true,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"],
    "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
  },
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 1,
      "title": "Key Metrics",
      "type": "row",
      "panels": []
    },
    {
      "id": 2,
      "title": "Active Connections",
      "description": "Current number of active WebSocket connections",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 1 },
      "datasource": {
        "type": "prometheus",
        "uid": "grafanacloud-prom"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "game_connections_active",
          "legendFormat": "Connections",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 100 }
            ]
          },
          "color": {
            "mode": "thresholds"
          },
          "mappings": [],
          "unit": "none"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "wideLayout": true,
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto",
        "showPercentChange": false
      }
    },
    {
      "id": 3,
      "title": "Active Rooms",
      "description": "Current number of active game rooms",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 1 },
      "datasource": {
        "type": "prometheus",
        "uid": "grafanacloud-prom"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "game_rooms_active",
          "legendFormat": "Rooms",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 20 },
              { "color": "red", "value": 50 }
            ]
          },
          "color": {
            "mode": "thresholds"
          },
          "mappings": [],
          "unit": "none"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "wideLayout": true,
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto",
        "showPercentChange": false
      }
    },
    {
      "id": 4,
      "title": "Active Sessions",
      "description": "Current number of active game sessions",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 1 },
      "datasource": {
        "type": "prometheus",
        "uid": "grafanacloud-prom"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "game_sessions_active",
          "legendFormat": "Sessions",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 30 },
              { "color": "red", "value": 80 }
            ]
          },
          "color": {
            "mode": "thresholds"
          },
          "mappings": [],
          "unit": "none"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "wideLayout": true,
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto",
        "showPercentChange": false
      }
    },
    {
      "id": 5,
      "title": "Error Rate",
      "description": "Rate of HTTP 5xx server errors over the last 5 minutes",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 },
      "datasource": {
        "type": "prometheus",
        "uid": "grafanacloud-prom"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "rate(http_server_request_duration_seconds_count{http_response_status_code=~\"5..\"}[5m])",
          "legendFormat": "Error Rate",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 0.1 },
              { "color": "red", "value": 1 }
            ]
          },
          "color": {
            "mode": "thresholds"
          },
          "mappings": [],
          "unit": "reqps"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "wideLayout": true,
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto",
        "showPercentChange": false
      }
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "id": 6,
      "title": "Traffic & WebSocket Activity",
      "type": "row",
      "panels": []
    },
    {
      "id": 7,
      "title": "WS Connections Over Time",
      "description": "Active WebSocket connections over time",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 6 },
      "datasource": {
        "type": "prometheus",
        "uid": "grafanacloud-prom"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "game_connections_active",
          "legendFormat": "Active Connections"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisBorderShow": false,
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 20,
            "gradientMode": "scheme",
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "viz": false
            },
            "insertNulls": false,
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "pointSize": 5,
            "scaleDistribution": { "type": "linear" },
            "showPoints": "never",
            "spanNulls": false,
            "stacking": { "group": "A", "mode": "none" },
            "thresholdsStyle": { "mode": "off" }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          },
          "unit": "none"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "calcs": ["lastNotNull", "max"],
          "displayMode": "list",
          "placement": "bottom",
          "showLegend": true
        },
        "tooltip": {
          "mode": "single",
          "sort": "none"
        }
      }
    },
    {
      "id": 8,
      "title": "WS Messages Received by Type",
      "description": "Rate of WebSocket messages received, grouped by message type",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 6, "x": 6, "y": 6 },
      "datasource": {
        "type": "prometheus",
        "uid": "grafanacloud-prom"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (ws_message_type)(rate(ws_messages_received_total[5m]))",
          "legendFormat": "{{ws_message_type}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisBorderShow": false,
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 20,
            "gradientMode": "scheme",
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "viz": false
            },
            "insertNulls": false,
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "pointSize": 5,
            "scaleDistribution": { "type": "linear" },
            "showPoints": "never",
            "spanNulls": false,
            "stacking": { "group": "A", "mode": "none" },
            "thresholdsStyle": { "mode": "off" }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          },
          "unit": "reqps"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "calcs": ["lastNotNull", "max"],
          "displayMode": "list",
          "placement": "bottom",
          "showLegend": true
        },
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      }
    },
    {
      "id": 9,
      "title": "WS Messages Sent by Type",
      "description": "Rate of WebSocket messages sent, grouped by message type",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 6 },
      "datasource": {
        "type": "prometheus",
        "uid": "grafanacloud-prom"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (ws_message_type)(rate(ws_messages_sent_total[5m]))",
          "legendFormat": "{{ws_message_type}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisBorderShow": false,
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 20,
            "gradientMode": "scheme",
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "viz": false
            },
            "insertNulls": false,
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "pointSize": 5,
            "scaleDistribution": { "type": "linear" },
            "showPoints": "never",
            "spanNulls": false,
            "stacking": { "group": "A", "mode": "none" },
            "thresholdsStyle": { "mode": "off" }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          },
          "unit": "reqps"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "calcs": ["lastNotNull", "max"],
          "displayMode": "list",
          "placement": "bottom",
          "showLegend": true
        },
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      }
    },
    {
      "id": 10,
      "title": "HTTP Request Rate",
      "description": "Total HTTP request rate across all endpoints",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 6 },
      "datasource": {
        "type": "prometheus",
        "uid": "grafanacloud-prom"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_server_request_duration_seconds_count[5m]))",
          "legendFormat": "Request Rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisBorderShow": false,
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 20,
            "gradientMode": "scheme",
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "viz": false
            },
            "insertNulls": false,
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "pointSize": 5,
            "scaleDistribution": { "type": "linear" },
            "showPoints": "never",
            "spanNulls": false,
            "stacking": { "group": "A", "mode": "none" },
            "thresholdsStyle": { "mode": "off" }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          },
          "unit": "reqps"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "calcs": ["lastNotNull", "max"],
          "displayMode": "list",
          "placement": "bottom",
          "showLegend": true
        },
        "tooltip": {
          "mode": "single",
          "sort": "none"
        }
      }
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "id": 11,
      "title": "Errors & Status Codes",
      "type": "row",
      "panels": []
    },
    {
      "id": 12,
      "title": "Recent Errors",
      "description": "Recent error log entries from the battle-tetris-server service",
      "type": "logs",
      "gridPos": { "h": 10, "w": 16, "x": 0, "y": 15 },
      "datasource": {
        "type": "loki",
        "uid": "grafanacloud-logs"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "{service_name=\"battle-tetris-server\"} |= \"error\"",
          "queryType": "range"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    },
    {
      "id": 13,
      "title": "HTTP Status Distribution",
      "description": "Distribution of HTTP response status codes over the last hour",
      "type": "piechart",
      "gridPos": { "h": 10, "w": 8, "x": 16, "y": 15 },
      "datasource": {
        "type": "prometheus",
        "uid": "grafanacloud-prom"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (http_response_status_code)(rate(http_server_request_duration_seconds_count[1h]))",
          "legendFormat": "{{http_response_status_code}}",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "mappings": [],
          "unit": "reqps"
        },
        "overrides": [
          {
            "matcher": { "id": "byRegexp", "options": "2.." },
            "properties": [
              { "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }
            ]
          },
          {
            "matcher": { "id": "byRegexp", "options": "3.." },
            "properties": [
              { "id": "color", "value": { "fixedColor": "blue", "mode": "fixed" } }
            ]
          },
          {
            "matcher": { "id": "byRegexp", "options": "4.." },
            "properties": [
              { "id": "color", "value": { "fixedColor": "yellow", "mode": "fixed" } }
            ]
          },
          {
            "matcher": { "id": "byRegexp", "options": "5.." },
            "properties": [
              { "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }
            ]
          }
        ]
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "pieType": "donut",
        "tooltip": {
          "mode": "single",
          "sort": "none"
        },
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "showLegend": true,
          "values": ["percent", "value"]
        },
        "displayLabels": ["percent"]
      }
    }
  ],
  "templating": {
    "list": []
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  }
}
